{{#if resume.awards.length}}
  <section id="awards">
    <h3>Awards</h3>
    <div class="stack">
      {{#each resume.awards}}
        <article>
          <header>
            <h4>{{title}}</h4>
            <div class="meta">
              {{#awarder}}
                <div>
                  Awarded by <strong>{{.}}</strong>
                </div>
              {{/awarder}}
              {{#date}}
                <time datetime="{{.}}">{{formatDate .}}</time>
              {{/date}}
            </div>
          </header>
          {{#summary}}
            {{{markdown .}}}
          {{/summary}}
        </article>
      {{/each}}
    </div>
  </section>
{{/if}}
